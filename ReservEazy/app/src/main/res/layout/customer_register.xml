<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

         <ScrollView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="0.2"
                android:background="@drawable/gradient">

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/text_logo" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.80">

                <EditText
                    android:id="@+id/c_r_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="20dp"
                    android:hint="Enter Name" />

                <EditText
                    android:id="@+id/c_r_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/c_r_name"
                    android:layout_margin="20dp"
                    android:hint="Enter Email ID" />

                <EditText
                    android:id="@+id/c_r_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/c_r_email"
                    android:layout_margin="20dp"
                    android:hint="Enter Phone Number" />

                <EditText
                    android:id="@+id/c_r_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/c_r_phone"
                    android:layout_margin="20dp"
                    android:hint="Enter Password"
                    android:inputType="textPassword" />

                <EditText
                    android:id="@+id/c_r_conpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/c_r_pass"
                    android:layout_margin="20dp"
                    android:hint="Enter Confirm Password"
                    android:inputType="textPassword" />


                <CheckBox
                    android:id="@+id/c_r_check"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/c_r_conpass"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/c_r_conpass"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/c_r_check"
                    android:layout_marginLeft="10dp"
                    android:text="Accept Terms and Conditions" />

                <Button
                    android:id="@+id/c_r_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/c_r_check"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/gradient"
                    android:padding="10dp"
                    android:text="SUBMIT"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
         </ScrollView>
</LinearLayout>