<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_margin="5dp"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/book_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:src="@mipmap/user"/>
        <TextView
            android:id="@+id/book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/book_pic"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:text="Shop Name"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/book_pin"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/pin"
            android:layout_below="@id/book_name"
            android:layout_toEndOf="@id/book_pic"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"/>
        <TextView
            android:id="@+id/book_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_below="@+id/book_name"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/book_pin"
            android:text="Shop area"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/book_clock"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/clock"
            android:layout_below="@id/book_tele"
            android:layout_toEndOf="@id/book_pic"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"/>
        <TextView
            android:id="@+id/book_timings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_below="@+id/book_phone"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/book_clock"
            android:text="Shop timings"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/book_tele"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/telephone"
            android:layout_below="@id/book_pin"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/book_pic"
            android:layout_marginStart="5dp"/>
        <TextView
            android:id="@+id/book_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/book_area"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/book_tele"
            android:text="Shop phone"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/book_slot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/book_date"
            android:layout_marginTop="5dp"
            android:text="SLOT"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/book_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/book_phone"
            android:layout_marginTop="30dp"
            android:text="DATE"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:textSize="20sp"
            />
        <Button
            android:id="@+id/book_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_below="@id/book_slot"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/gradient"
            android:textColor="@android:color/white"
            android:text="CANCEL BOOKING"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>